<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_image, size: "200*200" %>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <%= link_to edit_user_path(@user) do%>
      <div class="row">
        <!--枠-->
        <div class= "btn btn-outline-secondary btn-block" >
        <i class="fas fa-user-cog"></i>
        </div>
      </div>
      <% end %>

      <!--新規投稿-->
      <h2>New book</h2>
      <%= form_with model: @book, url: '/books'  do |f| %>
        <h6>Title</h6>
        <%= f.text_field :title %>

        <h6>Opinion</h6>
        <%= f.text_area :body %>

        <div class="form-group">
          <%= f.submit "Create Book", class:"btn btn-success"%>
        </div>
      <% end %>
      </div>


    <!--usersが下ではなく横に来る-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <!--レイアウト-->
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <!--↓グレーの線の長さが合うようになる-->
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag @user.get_image, size: "200*200" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>


    </div>
  </div>
</main>