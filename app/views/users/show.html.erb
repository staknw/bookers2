<%= flash[:notice] %>
<%= flash[:update] %>
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_image, size: "200*200" %>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <!--introductionというカラムを入れる-->
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <%= link_to edit_user_path(@user) do%>
      <div class="row">
        <!--枠-->
        <div class= "btn btn-outline-secondary btn-block" >
        <i class="fas fa-user-cog"></i>
        </div>
      </div>
      <% end %>

      <!--新規投稿-->
      <h2>New book</h2>
      <%= form_with model: @book, url: '/books'  do |f| %>
        <h6>Title</h6>
        <%= f.text_field :title %>

        <h6>Opinion</h6>
        <%= f.text_area :body %>

        <div class="form-group">
          <%= f.submit "Create Book", class:"btn btn-success"%>
        </div>
      <% end %>
      </div>

      <!--booksが下ではなく横に来る-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <!--レイアウト-->
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <!--↓グレーの線の長さが合うようになる-->
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(@user) do %>
              <%= image_tag @user.get_image, size: "200*200" %>
            <% end %>
            </td>
            <td><%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</main>